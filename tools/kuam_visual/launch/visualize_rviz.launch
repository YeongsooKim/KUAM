<launch>
    <!-- param -->
	<arg name="simulation" default="false" />
	<group if="$(arg simulation)">
		<param name="use_sim_time" value="true" />
	</group>

    <!-- namespace -->
    <rosparam command="load" file="$(find config)/param.yaml" />

    <group ns="/kuam/visual">
		<node pkg="kuam_visual" type="kuam_visual_node" name="kuam_visual" />
	</group>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find kuam_visual)/rviz/kuam.rviz" />
</launch>
