<launch>
    <arg name="simulation" default="false" />

	<group if="$(arg simulation)">
		<param name="use_sim_time" value="true" />
	</group>

    <group ns="/kuam/visual">
		<node pkg="kuam_visual" type="marker.py" name="marker" />
	</group>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find kuam_visual)/rviz/kuam.rviz" />
</launch>
